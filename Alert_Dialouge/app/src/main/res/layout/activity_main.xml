<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btndialouge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialouge1"
        app:layout_constraintBottom_toTopOf="@+id/btnDialouge2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDialouge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialouge2"
        app:layout_constraintBottom_toTopOf="@+id/btnDialouge3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btndialouge1" />

    <Button
        android:id="@+id/btnDialouge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialouge3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDialouge2" />

</androidx.constraintlayout.widget.ConstraintLayout>