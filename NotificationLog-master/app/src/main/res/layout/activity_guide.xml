<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GuideActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_margin="10dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/logonotif" />


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_margin="5dp"

                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="We Make Our App easy to use but Some Users might face difficulty using the app Or What do to with the Features \n\n So Here we will Provide you details and information using the features \n\nIf You still have issue using the app Please mail us"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:fontFamily="@font/montserratextralightgoogle"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserratmediumgoogle"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="Tips"
                android:textAlignment="center"
                android:textColor="#FF5960"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/harshil"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserratmediumgoogle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="Logs Limits"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#23334E"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
android:text="To make smooth and decrease Loading time we have set limit for things, which make app run smooth \n\n -Search Limit(Home Page):5999 \n\n-Search Limit(Browse All Notification Page):10999 \n\n-Stats Page Limit:29999 \n\n You can log unlimitd notifcations but for best use and make app run smooth we request you to delete old notification after getting 10-12k Notifications "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#02A796"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/harshil"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserratmediumgoogle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="How To View Deleted Messages"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#23334E"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="

Step 1: Open App And Make Sure You Have Enabled Notification Permission\n\n



 Step 2: If Any One Sends You Message and Then Deletes It. You Will Be Able to see the message by Clicking On Browse Notification Option or in Home Page\n\n



  Step 3: Search The Contact Name On Search Bar and View That Deleted Message"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#02A796"
                    android:textSize="20dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserratmediumgoogle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="Search Notifications"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#23334E"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="You can search Notifications, Messages, Contact Name, App Name, Package &amp; Date  "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#02A796"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserratmediumgoogle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="View Notifications App Wise"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#23334E"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                  android:text="Most people Want to just view notification from few apps, so we have option to view notification of most popular apps. Here you can only view notification of particular apps. Go to menu and click on browse notification app wise option "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#02A796"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserratmediumgoogle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="More"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#23334E"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="@dimen/desc_padding"
                    android:paddingRight="@dimen/desc_padding"
                    android:text="For More Info We Request You To View Our FAQs or Contact Us"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#02A796"
                    android:textSize="20dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btncontact"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily=""
                android:text="Contact Team"
                android:background="@drawable/btnroundbtndesign"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>