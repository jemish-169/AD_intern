<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainback"

    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"

            app:elevation="1dp"
            app:cardCornerRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="Icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:transitionName="icon" android:textColor="@color/titilewhite"

                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textSize="18sp"
                        android:textColor="@color/titilewhite"
                        android:fontFamily="@font/fontmosmed"

                        android:text="AppName"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:autoLink="all"
                        android:text="Content\nContent"
                        android:textColor="@color/titilewhite"
                        android:fontFamily="@font/fontmosreg"

                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:gravity="center"
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/titilewhite"
                        android:fontFamily="@font/fontmossemi"

                        android:text="2018-01-01"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/buttons"
            app:elevation="2dp"
            app:cardCornerRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon8gifsetting"/>-->

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#7D7D99"
                    android:fontFamily="@font/fontmos"

                    android:background="@drawable/btnroundbtndesign"
                    android:text="@string/open_notification_settings"

                    android:id="@+id/notificationsettingbtn"
                    style="@style/rg"
                    android:padding="16dp"
                    android:onClick="openNotificationSettings" />
           <!-- </LinearLayout>-->


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:visibility="gone"
            android:id="@+id/cdselc"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cdselcw"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icons8front65"/>

                <Button
                    android:id="@+id/btnselevct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Notification"
                    android:textColor="#7D7D99"
                    android:background="@color/mainback"
                    style="@style/rg"
                    android:padding="16dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="55dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add This Notification To Apps Section, Sort This Notification"
                    android:textColor="@color/titilewhite" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="2dp"
            app:cardCornerRadius="7dp"

            android:layout_marginBottom="14dp">
<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:visibility="gone"
                    android:layout_height="60dp"
                    android:background="@drawable/icons8gifopen"/>-->

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Open APP"
                    android:id="@+id/buttonplay"
                    android:textColor="#7D7D99"
                    android:fontFamily="@font/fontmos"
                    android:background="@drawable/btnroundbtndesign"
                    style="@style/rg"
                    android:padding="16dp"
                    />
<!--
            </LinearLayout>-->


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/cddplay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cdplay"
                    android:visibility="gone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icons8front65"/>

                <Button
                    android:id="@+id/buttonopen"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Open APP IN PLAY STORE"
                    android:textColor="#7D7D99"
                    android:background="@color/mainback"
                    style="@style/rg"
                    android:padding="16dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="visible"
            app:elevation="2dp"
            app:cardCornerRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonjson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MORE INFO"
                android:fontFamily="@font/fontmos"
                android:background="@drawable/btnroundbtndesign"
                android:textColor="#463F3F"
                style="@style/rg"
                android:padding="16dp"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="@font/fontmos"
            android:visibility="gone"
            android:id="@+id/json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{...}"
            android:typeface="monospace"
            android:textColor="@color/titilewhite"

            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textIsSelectable="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtinv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:textColor="@color/titilewhite"

            android:text="AppName"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            />
    </LinearLayout>


</ScrollView>